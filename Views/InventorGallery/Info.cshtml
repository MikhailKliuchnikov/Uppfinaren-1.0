@using Uppfinaren_1._0.Models;
@model Inventor
<div class="inventorDemonstration">
    <h1>@Model.Name</h1>
    <h2 style="margin-bottom: 3em;">@Model.Description</h2>
    <img src="@Model.ImageUrl" alt="Brilliant photo of @Model.Name" style="width: 300px; height: 300px;" />

    <h2>Some of the Inventions:</h2>
    <br>
    <div class="inventionGrid">
        @foreach (Artwork invention in Model.Inventions)
        {
            <div class="inventionCardWrapper">
                <a asp-controller="ArtworkGallery" asp-action="Info" asp-route-id="@invention.Id">@invention.Title</a>
                <img src="@invention.ImageUrl" alt="@invention.Title" style="width:150px; height: 150px;" />
                <p>@invention.Description</p>

            </div>
        }
    </div>

    <h2>How to contact this brilliant mind?</h2>
    <p>Email: @Model.Email</p>
    <p>Phone: @Model.PhoneNumber</p>
    <p>Other means of contacting: @Model.OtherWayToContact</p>
    <a href="/InventorGallery">Back to Inventor Gallery</a>
</div>